#other-players.game-area
  each otherPlayers
    with singleElement panelsOther
      +panelMini
    else
      .game-panel-group.card
        .panel-group-label= playerName
        each panelsOther
          if zoomed
            +panelFull
          else
            +panelMini

#common-panels.game-area
  each panelsGame
    if hidden
      +panelMini
    else
      +panelFull

#own-player.game-area
  each panelsOwn
    if hidden
      +panelMini
    else
      +panelFull
